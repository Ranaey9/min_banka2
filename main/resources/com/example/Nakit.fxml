<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.NakitController"
      spacing="10"
      style="-fx-padding: 20; -fx-background-color: #f8f8f8;">

    <Label text="NAKİT BİLGİLERİ" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Label fx:id="bakiyeLabel" text="Bakiye: 0 TL" style="-fx-font-size: 18px;"/>

    <HBox spacing="10">
        <TextField fx:id="miktarField" promptText="Miktar girin"/>
        <Button text="Yatır" onAction="#yatir"/>
        <Button text="Çek" onAction="#cek"/>
    </HBox>

    <Button text="Geri" onAction="#geriDon"/>
</VBox>
