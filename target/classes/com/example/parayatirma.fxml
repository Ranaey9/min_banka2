<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.example.ParaYatirmaController"
  alignment="CENTER"
  spacing="15"
  style="-fx-padding: 30;">

  <Label text="Para Yatırma" style="-fx-font-size: 24;" />

  <TextField fx:id="miktarField" promptText="Yatırılacak miktarı girin" />

  <Button text="Yatır" onAction="#yatir" />

  <Label fx:id="sonucLabel" text="" style="-fx-font-size: 16; -fx-text-fill: green;" />

  <Button text="Geri" onAction="#goBack" />

</VBox>